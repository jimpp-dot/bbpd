<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/anchor"
        android:layout_width="40dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignTop="@id/anchor"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechat_login_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/wechat_login" />

        <ImageView
            android:id="@+id/qq_login_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/qq_login" />

        <ImageView
            android:id="@+id/apple_login_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/apple_login"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dy_login_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/dy_login"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_above="@id/anchor"
        android:layout_centerHorizontal="true"
        android:text="其他登录方式"
        android:textColor="#33313131" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/tv_title"
        android:src="@drawable/shape_other_login_type_divider" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/tv_title"
        android:rotation="180"
        android:src="@drawable/shape_other_login_type_divider" />

</RelativeLayout>